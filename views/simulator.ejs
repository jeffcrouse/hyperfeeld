<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>Hyperfeel Headset Simulator</title>
    <link href="/css/bootstrap.css" rel="stylesheet">
    <link href="/css/main.css" rel="stylesheet">
  </head>

  <body>

    <div class="navbar navbar-inverse navbar-fixed-top">
      <div class="container">
        <div class="navbar-header">
          <a class="navbar-brand" href="#">Hyperfeel Headset Simulator</a>
        </div>

      </div>
    </div>



    <div class="container" style="margin-top: 30px;">

    	<div class="row">
    		<div class="col-md-4 col-lg-4">
    			<strong><%= ws %></strong>
    			<div id="ws_status">not connected</div>
    			<hr />
    			<strong>ThinkGear Data</strong>
    			<div id="tg_data">
    			</div>
    		</div>
    		<div class="col-md-8 col-lg-8">
		    	<div class="btn-group btn-group-justified" id="colors">
		    		<% colors.forEach(function(el, index) { %>
		    		<a href="#" class="btn btn-default" style="color: #<%= el.hex %>;" data-value="<%= index %>"><%= el.name %></a>
		    		<% }); %>
		    	</div>

				<hr />
				<b>send to server</b>
				<div class="btn-group btn-group-justified" id="simulator">
					<a href="#" id="btn-simulator-on" class="btn btn-default btn-lg">on</a>
					<a href="#" id="btn-simulator-off" class="btn btn-default btn-lg active">off</a>
				</div>
				<div id="info"></div>
				<hr />

	

				<div class="btn-group btn-group-justified" id="control">
					<a href="#" id="btn-submit" class="btn btn-success btn-lg">Submit</a>
					<a href="#" id="btn-reset" class="btn btn-danger btn-lg">Reset</a>
				</div>

			</div>
		</div>
    </div> <!-- /container -->



    <script src="http://code.jquery.com/jquery.js"></script>
    <script src="/js/bootstrap.min.js"></script>
    <script src="/js/simulator.js"></script>
    <script>
    $(function(){
    	init("<%= ws %>")
    })
    </script>
  </body>
</html>